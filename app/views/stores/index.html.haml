.page-header
  = link_to new_store_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    New Store
  %h1 Listing stores
.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th
        %th
        %th
    %tbody
      = content_tag_for(:tr, @stores) do |store|
        %td= store.name
        %td= link_to 'Show', store
        %td= link_to 'Edit', edit_store_path(store)
        %td= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }
